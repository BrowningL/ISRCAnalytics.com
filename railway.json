{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-west1": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "web": {
      "build": {
        "buildCommand": "cd apps/web && npm install && npm run build"
      },
      "deploy": {
        "startCommand": "cd apps/web && npm start",
        "port": 3000,
        "healthcheckPath": "/",
        "region": "us-west1"
      }
    },
    "api": {
      "build": {
        "buildCommand": "cd apps/api && go build -o api ./cmd/main.go"
      },
      "deploy": {
        "startCommand": "./apps/api/api",
        "port": 8080,
        "healthcheckPath": "/api/health",
        "region": "us-west1"
      }
    },
    "worker": {
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "./apps/worker/Dockerfile"
      },
      "deploy": {
        "startCommand": "python main.py",
        "region": "us-west1"
      }
    }
  }
}
